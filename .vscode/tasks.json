{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build game",
            "type": "shell",
            "command": "g++",
            "args": [
                "-std=c++17",
                "-Wall",

                "main.cpp",
                "XO_Classes.cpp",
                "Numerical_Classes.cpp",
                "misere_Classes.cpp",
                "SUS_Classes.cpp",
                "TTT5_Classes.cpp",
                "Obstacles_Classes.cpp",
                "InfinityTTT_Classes.cpp",
                "TicTacToe4x4.cpp",
                 "DiamondTTT.cpp",
                 "PyramidTTT.cpp",
                 "FourInARow_Classes.cpp",
                 "UltimateTTT_Classes.cpp",
                "-o",
                "game.exe"
            ],
            "problemMatcher": "$gcc",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}
